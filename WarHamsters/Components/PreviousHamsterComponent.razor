@using DataLibrary.Models


<div class="row justify-content-center text-center">
    <HamsterComponent hamster="@Hamster1"></HamsterComponent>
    <HamsterComponent hamster="@Hamster2"></HamsterComponent>
</div>

<div class="row justify-content-center text-center">
    <div class="card col col-sm-4 d-flex">
        
            <div class="card-header">
                <h4>Match Won by: @Hamster1.Name !</h4>
            </div>
            <div class="card-body">
                <p> @Hamster1.Name has a winning procent of @_hamster1Procent % 
                    <br />
                    @Hamster2.Name has a winning procent of @_hamster2Procent % 
                
                </p>
            </div>
        
    </div>
</div>

@code {
    [Parameter]
    public Hamster Hamster1 { get; set; }
    [Parameter]
    public Hamster Hamster2 { get; set; }
    [Parameter]
    public Match match { get; set; }
    private int _hamster1Procent;
    private int _hamster2Procent;

    protected override void OnInitialized() //Räknar nog inte varje gång...
    {
        _hamster1Procent = (Hamster1.Wins / Hamster1.Games) * 100;
        _hamster2Procent = (Hamster2.Wins / Hamster2.Games) * 100;
        
    }
}
