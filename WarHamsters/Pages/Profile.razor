@page "/profile/{hamsterId}/{oldpage}"

<PageTitle>Profile: @_hamster.Name</PageTitle>

@inject NavigationManager navigation;
@inject HamsterService hamsterService;
<div class="justify-content-center text-center">

<h3>Profile for @_hamster.Name</h3>

</div>





<HamsterComponent Hamster="@_hamster" IsProfile="Isprofile"></HamsterComponent>


<button @onclick="GoBack" class="btn btn-secondary">Back</button>
@*<button @onclick="Edit" class="btn btn-check">Edit</button>*@
<button @onclick="OpenDeleteDialog" class="btn btn-danger">Delete</button>

<button @onclick="ShowMatches" class="btn btn-primary">@_ShowHide Matches</button>


@if (_showMatches)
{
    
<MatchComponent Hamster="@_hamster"></MatchComponent>
}



@*---Modal----*@
@if (DeleteDialogOpen)
{
    <ModalComponent hamster="_hamster"
                    OnClose="@OnDeleteDialogClose">
    </ModalComponent>
}


