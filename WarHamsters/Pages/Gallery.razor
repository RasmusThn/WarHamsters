@page "/gallery"
@inject HamsterService hamsterService;
@inject NavigationManager navigate;
<PageTitle>All Hamsters</PageTitle>

@*<SearchComponent></SearchComponent> Söker inte på sidan*@
<div class="container card" style="width: 18rem;">
    <div class="form-group card-body">
        <input class="form-control"
               @bind-value="searchTerm" id="search"
               placeholder="Search for Hamster by name..." />
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary" @onclick="GethamsterbySearch">
            Search
        </button>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            @*<th>Age</th>
            <th>FavFood</th>
            <th>Loves</th>
            <th>Wins</th>
            <th>Defeats</th>
            <th>Games</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var hamster in hamsters)
        {
            <tr>
                <td><a href="/profile/@hamster.Id.ToString()/@url">@hamster.Name</a></td>
               @* <td>@hamster.Age</td>
                <td>@hamster.FavFood</td>
                <td>@hamster.Loves</td>
                <td>@hamster.Wins</td>
                <td>@hamster.Defeats</td>
                <td>@hamster.Games</td>*@
                <td><img class="hamster-bild-small" src="@hamster.ImgName"></td>
                @*<td><button @onclick="(x => Delete(hamster.Id))" class="btn btn-danger">Delete</button></td>*@
            </tr>
        }
    </tbody>
</table>

