@page "/gallery"
@inject HamsterService hamsterService;
@inject NavigationManager navigate;
<PageTitle>All Hamsters</PageTitle>


<div class="container card" style="width: 18rem;">
    <div class="form-group card-body">
        <input class="form-control"
               @bind-value="searchTerm" id="search"
               placeholder="Search for Hamster by name..." />
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary" @onclick="GethamsterbySearch">
            Search
        </button>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hamster in hamsters)
        {@if (hamster.IsActive)
         {
             
            <tr>
                <td><a href="/profile/@hamster.Id.ToString()/@url">@hamster.Name</a></td>
                <td><img class="hamster-bild-small" src="@hamster.ImgName"></td>
            </tr>
         }
        }
    </tbody>
</table>

