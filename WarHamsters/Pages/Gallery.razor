@page "/gallery"
@inject HamsterService hamsterService;
<PageTitle>All Hamsters</PageTitle>
<div class="container card" style="width: 18rem;">
    <div class="form-group card-body">
        <input class="form-control"
               @bind-value="searchTerm" id="search"
               placeholder="Search for Hamster by name..." />
    </div>
    <div class="card-footer">
        <button class="btn btn-secondary" @onclick="GethamsterbySearch">
            Search
        </button>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>FavFood</th>
            <th>Loves</th>
            <th>Wins</th>
            <th>Defeats</th>
            <th>Games</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hamster in hamsters)
        {
            <tr>
                <td>@hamster.Name</td>
                <td>@hamster.Age</td>
                <td>@hamster.FavFood</td>
                <td>@hamster.Loves</td>
                <td>@hamster.Wins</td>
                <td>@hamster.Defeats</td>
                <td>@hamster.Games</td>
                <td><img class="hamster-bild" src="@hamster.ImgName"></td>
                <td><button @onclick="(x => Delete(hamster.Id))" class="btn btn-danger">Delete</button></td>
            </tr>
        }
    </tbody>
</table>
@code {
     private string searchTerm { get; set; } = string.Empty;
    private List<Hamster> hamsters = new List<Hamster>();

    protected override async Task OnInitializedAsync()
    {
        if (!hamsterService.CheckDatabaseForHamsters())
        {
            return;
        }
        else
        {
            hamsters = await hamsterService.GetAllHamsters();
        }
    }
    public async void Delete(int id)
    {
        Hamster hamster = await hamsterService.GetHamsterById(id);
        if (hamster != null)
        {
            hamsterService.DeleteHamster(hamster);
            ShouldRender();
        }
    }
       public void GethamsterbySearch()
    {

        hamsters = hamsterService.GetHamsterBySearch(searchTerm);

    }
}
